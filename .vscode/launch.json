    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Gotak TCP",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gotak/main.go",
            "args": [
                "--connection=tcp",
                "--server=takserver",
                "--port=8087"
            ]
        },
        {
            "name": "Launch Gotak UDP",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gotak/main.go",
            "args": [
                "--connection=udp",
                "--server=takserver",
                "--port=8087"
            ]
        },
        {
            "name": "Launch Gotak TLS",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gotak/main.go",
            "args": [
                "--connection=tls",
                "--server=takserver",
                "--port=8089",
                "--ca=${workspaceFolder}/cert/ca.pem",
                "--cert=${workspaceFolder}/cert/local.pem",
                "--key=${workspaceFolder}/cert/local.key",
                "--skip-verify=true"
            ]
        },

        {
            "name": "Launch Gotak TLS p12",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gotak/main.go",
            "args": [
                "--connection=tls",
                "--server=takserver",
                "--port=8089",
                "--ca=${workspaceFolder}/cert/ca.pem",
                "--cert=${workspaceFolder}/cert/local.p12",
                "--password=atakatak",
                "--skip-verify=true"
            ]
        },
        {
            "name": "Launch Gotak Multicast",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gotak/main.go",
            "args": [
                "--connection=multicast",
                "--multicast-addr=239.2.3.1",
                "--multicast-port=6969"
            ]
        },
        {
            "name": "Launch Gotak UDP Stream",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/gotak/main.go",
            "args": [
                "--connection=udp",
                "--server=takserver",
                "--port=65534"
            ]
        }
    ]
}